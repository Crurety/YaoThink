# 环境变量示例文件
# 复制此文件为 .env 并填入实际值

# 数据库
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/yaothink

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT密钥 (生产环境请使用强密钥)
SECRET_KEY=your-super-secret-key-change-in-production

# 调试模式
DEBUG=true

# API配置
API_HOST=0.0.0.0
API_PORT=8000

# 前端URL (用于CORS)
FRONTEND_URL=http://localhost:5173

# 短信服务 (可选)
SMS_API_KEY=
SMS_API_SECRET=

# 邮件服务 (可选)
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASSWORD=
